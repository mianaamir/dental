<h1  class="index1">Banner Media Management</h1>
<div class="index3">
  <%= link_to 'Add New Banner Media', new_tbl_banner_medium_path, :class => "btn_submit" %>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#bannermedia").css("background-color", "red");

    });
</script>
<table class="index2">
  <thead>
    <tr>
      <th>Banner ID</th>
      <th>Media ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tbl_banner_media.each do |tbl_banner_medium| %>
      <tr>
        <td><%= tbl_banner_medium.BannerID %></td>
        <td><%= tbl_banner_medium.MediaID %></td>
        <td id="viewitem"><%= link_to 'View', tbl_banner_medium %></td>
        <td id="edititem"><%= link_to 'Edit', edit_tbl_banner_medium_path(tbl_banner_medium) %></td>
        <td id="deleteitem"><%= link_to 'Delete', tbl_banner_medium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<style type="text/css">
    #viewitem  a {
        position: relative;
        right: -5px;

    }
    #edititem  a {
        position: relative;
        right: -15px;

    }
    #deleteitem  a {
        position: relative;
        right: -26px;

    }
</style>