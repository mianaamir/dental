<h1 class="index1">Config Management</h1>
<div class="index3">
  <%= link_to 'Add New Config', new_tbl_config_path, :class => "btn_submit" %>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#config").css("background-color", "red");

    });
</script>
<table class="index2">
  <thead>
    <tr>
      <th>ID </th>
      <th>Title</th>
      <th>Value</th>
      <th>Type</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tbl_configs.each do |tbl_config| %>
      <tr>
        <td><%= tbl_config.ConfigID %></td>
        <td><%= tbl_config.ConfigTitle %></td>
        <td><%= tbl_config.ConfigValue %></td>
        <td><%= tbl_config.Type %></td>
        <td><%= tbl_config.Status %></td>
        <td id="viewitem"><%= link_to 'View', tbl_config %></td>
        <td id="edititem"><%= link_to 'Edit', edit_tbl_config_path(tbl_config) %></td>
        <td id="deleteitem"><%= link_to 'Delete', tbl_config, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

