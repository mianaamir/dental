<h1 class="index1">Form Field Helper Management</h1>
<div class="index3">
  <%= link_to 'Add New FormField Helper', new_tbl_form_field_helper_path , :class => "btn_submit"%>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#formfieldhelper").css("background-color", "red");

    });
</script>
<table class="index2">
  <thead>
    <tr>
      <th>Form ID</th>
      <th>Field ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tbl_form_field_helpers.each do |tbl_form_field_helper| %>
      <tr>
        <td><%= tbl_form_field_helper.FormID %></td>
        <td><%= tbl_form_field_helper.FieldID %></td>
        <td id="viewitem"><%= link_to 'View', tbl_form_field_helper %></td>
        <td id="edititem"><%= link_to 'Edit', edit_tbl_form_field_helper_path(tbl_form_field_helper) %></td>
        <td id="deleteitem"><%= link_to 'Delete', tbl_form_field_helper, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

