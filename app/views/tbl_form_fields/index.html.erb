<h1 class="index1">Form Field Management</h1>
<div class="index3">
  <%= link_to 'Add New FormField', new_tbl_form_field_path, :class => "btn_submit" %>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#formfield").css("background-color", "red");

    });
</script>
<table class="index2">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Type</th>
      <th>Value</th>
      <th>Tooltip</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tbl_form_fields.each do |tbl_form_field| %>
      <tr>
        <td><%= tbl_form_field.FieldID %></td>
        <td><%= tbl_form_field.FieldTitle %></td>
        <td><%= tbl_form_field.FieldType %></td>
        <td><%= tbl_form_field.FieldValue %></td>
        <td><%= tbl_form_field.Tooltip %></td>
        <td><%= tbl_form_field.Status %></td>
        <td id="viewitem"><%= link_to 'View', tbl_form_field %></td>
        <td id="edititem"><%= link_to 'Edit', edit_tbl_form_field_path(tbl_form_field) %></td>
        <td id="deleteitem"><%= link_to 'Delete', tbl_form_field, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

