<h1 class="index1">Global Management</h1>

<div class="index3">
  <%= link_to 'Add New Global', new_tbl_global_path , :class => "btn_submit"%>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#global").css("background-color", "red");

    });
</script>
<table class="index2">
  <thead>
    <tr>
      <th>Token</th>
      <th>Name</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tbl_globals.each do |tbl_global| %>
      <tr>
        <td><%= tbl_global.Token %></td>
        <td><%= tbl_global.Name %></td>
        <td><%= tbl_global.Status %></td>
        <td id="viewitem"> <%= link_to 'View', tbl_global %></td>
        <td id="edititem"><%= link_to 'Edit', edit_tbl_global_path(tbl_global) %></td>
        <td id="deleteitem"><%= link_to 'Delete', tbl_global, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

