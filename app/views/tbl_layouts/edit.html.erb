<h1 style="position: relative;
        bottom: 249px;
        right: -224px;">PlaceHolder</h1>


<div style="position: relative;
        bottom: 241px;
        right: -226px;">
  <a href="/tbl_place_holders/new/<%= params[:id]  %>" class="btn_submit">Add New PlaceHolder</a>

</div>
<table class="index2">
  <thead>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Type</th>
    <th>Placeholderdesc</th>
    <th>Isactive</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <h1 style="visibility: hidden;"><%= @placeholder=TblLayoutPlaceholder.where(LayoutID: params[:id]) %></h1>
  <% @placeholder.each do |placeholder| %>

      <h1 style="visibility: hidden;"> <%= @tbl_place_holders=TblPlaceHolder.where(PlaceHolderID: placeholder.PlaceHolderID) %>
      </h1>


  <% @tbl_place_holders.each do |tbl_place_holder| %>
      <tr>
        <td><%= tbl_place_holder.PlaceHolderID %></td>
        <td><%= tbl_place_holder.PlaceHolderTitle %></td>
        <td><%= tbl_place_holder.Type %></td>

        <td><%= tbl_place_holder.PlaceHolderDesc %></td>
        <td><%= tbl_place_holder.IsActive %></td>
        <td id="viewitem"><%= link_to 'View', tbl_place_holder %></td>
        <td id="edititem"><%= link_to 'Edit', edit_tbl_place_holder_path(tbl_place_holder) %></td>
        <td id="deleteitem"><%= link_to 'Delete', tbl_place_holder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
      <%end%>
  </tbody>
</table>
