<h1 class="index1">Layout Management</h1>
<div class="index3">
  <%= link_to 'Add New Layout', new_tbl_layout_path , :class => "btn_submit"%>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#layout").css("background-color", "red");

    });
</script>
<table class="index2">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Value</th>
      <th>Type</th>
      <th>OnStateTag</th>
      <th>FilePath</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tbl_layouts.each do |tbl_layout| %>
      <tr>
        <td><%= tbl_layout.LayoutID %></td>
        <td><%= tbl_layout.LayoutTitle %></td>
        <td><%= tbl_layout.Value %></td>
        <td><%= tbl_layout.Type %></td>
        <td><%= tbl_layout.OnStateTag %></td>
        <td><%= tbl_layout.FilePath %></td>
        <td><%= tbl_layout.Status %></td>
        <td id="viewitem"><%= link_to 'View', tbl_layout %></td>
        <td id="edititem">   <a href="/edit/<%= tbl_layout.LayoutID %>" >Edit</a>
        <td id="deleteitem"><%= link_to 'Delete', tbl_layout, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

