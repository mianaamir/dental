<h1 class="index1">Page Banner Management</h1>
<div class="index3">
  <%= link_to 'Add New PageBanner', new_tbl_page_banner_path, :class => "btn_submit" %>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#pagebanner").css("background-color", "red");

    });
</script>
<table class="index2">
  <thead>
    <tr>
      <th>Page ID</th>
      <th>Banner ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tbl_page_banners.each do |tbl_page_banner| %>
      <tr>
        <td><%= tbl_page_banner.PageID %></td>
        <td><%= tbl_page_banner.BannerID %></td>
        <td id="viewitem"><%= link_to 'View', tbl_page_banner %></td>
        <td id="edititem"><%= link_to 'Edit', edit_tbl_page_banner_path(tbl_page_banner) %></td>
        <td id="deleteitem"><%= link_to 'Delete', tbl_page_banner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

