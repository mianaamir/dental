<h1 class="index1">Page Form Management</h1>
<div class="index3">
  <%= link_to 'Add New PageForm', new_tbl_page_form_path , :class => "btn_submit"%>
</div>
<script type="text/javascript">
    $(document).ready(function(){
        $("#pageform").css("background-color", "red");

    });
</script>
<table class="index2">
  <thead>
    <tr>
      <th>Page ID</th>
      <th>Form ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tbl_page_forms.each do |tbl_page_form| %>
      <tr>
        <td><%= tbl_page_form.PageID %></td>
        <td><%= tbl_page_form.FormID %></td>
        <td id="viewitem"><%= link_to 'View', tbl_page_form %></td>
        <td id="edititem"><%= link_to 'Edit', edit_tbl_page_form_path(tbl_page_form) %></td>
        <td id="deleteitem"><%= link_to 'Delete', tbl_page_form, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

